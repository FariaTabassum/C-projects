@model University_Management_MVC.Models.Department
@{
    ViewBag.Title = "Index";
}

@section styles
{
<style>
    label.error {
        color: red;
    }

    input.error {
        border: 1px solid red;
    }
</style>   
}





@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "saveDepartmentForm", @class = "form-demo" }))
