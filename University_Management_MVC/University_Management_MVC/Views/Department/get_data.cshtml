@*@model University_Management_MVC.Models.Department*@
@{
    ViewBag.Title = "get_data";
}

@section styles
{
    <style>
        .tableData{
            border-left:solid 1px #D8C3C3;
            border-top:solid 1px #D8C3C3;
        }
        .tableData tr
        {
        }
            .tableData td, tableData th {
                border-right: solid 1px #D8C3C3;
                border-bottom: solid 1px #D8C3C3;
                text-align:left;
                padding:5px;
            }
            .tableData td{

            }
            .tableData th{
                background-color: #FAFAFA;
                padding: 7px 5px;
                border-bottom-color: #9C9C9C;
            }
    </style>

    
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @*<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />*@
}

<form id="myTable">
    {

    <fieldset>
        <legend>Department Data Table View</legend>

        <table id="myTable" class="tableData">
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Department Name</th>
                </tr>
        </table>
    </fieldset>
</form>

    @section scripts
{
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        @*<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>*@

        <script>
            $(function () {
                $.get("get_data", {}, function (data) {
                    var row;
                    $.each(data, function (i, v1) {
                        row += "<tr><td>" + v1.Id + "</td><td>" + v1.Code + "</td><td>" + v1.Name + "</td></tr>";
                    });
                    $("#myTable").append(row);

                })
            })
        </script>
    }
